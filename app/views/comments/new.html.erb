<% provide(:title, 'New Comment') %>
<h1>New Comment</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([@idea, @idea.comments.build]) do |f| %>
    <%= render 'shared/idea_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :comment %>
      <%= f.text_field :comment %>

      <%= f.submit "Submit Comment", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>