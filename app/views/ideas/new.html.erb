<% provide(:title, 'New Idea') %>
<h1>New Idea</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@idea) do |f| %>
    <%= render 'shared/idea_error_messages' %>
    
      <%= f.label :title %>
      <%= f.text_area :title, :id => "idea_title" %>

      <%= f.label :description %>
      <%= f.text_area :description, :id => "idea_description" %>

      <div class="pull-right">
        <%= f.submit "Submit Idea", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>